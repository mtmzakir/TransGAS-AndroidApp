<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/Categories"
            android:text="Edit Profile"
            android:textColor="@color/maroon"
            android:fontFamily="@font/play_bold"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/userImageImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/icon_person_pin" />

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/fira_bold"
            android:textColor="@color/maroon" />


        <TextView
            android:id="@+id/tvUserEmailText"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/fira_medium"
            android:textColor="@color/maroon"
            android:text="Email" />

        <EditText
            android:id="@+id/userEmailEditText"
            android:drawableLeft="@drawable/ic_email"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edit_text"
            android:drawablePadding="15dp"
            android:fontFamily="@font/fira"
            android:textColor="@color/maroon"
            android:textColorHint="@color/yellow"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvUserAddressText"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/fira_medium"
            android:textColor="@color/maroon"
            android:text="Address" />
        <EditText
            android:id="@+id/userAddressEditText"
            android:drawableLeft="@drawable/ic_address"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edit_text"
            android:drawablePadding="15dp"
            android:fontFamily="@font/fira"
            android:textColor="@color/maroon"
            android:textColorHint="@color/yellow"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvUserPhoneText"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/fira_medium"
            android:textColor="@color/maroon"
            android:text="Phone Number" />
        <EditText
            android:id="@+id/userPhoneEditText"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edit_text"
            android:drawablePadding="15dp"
            android:fontFamily="@font/fira"
            android:textColor="@color/maroon"
            android:textColorHint="@color/yellow"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="54dp"
        android:background="@drawable/button_main"
        android:text="Update"
        android:fontFamily="@font/play_bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>